<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Holiday Manager{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
        {% endblock %}
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        {% set user = app.session.get(constant('AppBundle\\Common\\Constants::USER_VARIABLE_NAME')) %}
        {% set notices = app.session.flashbag.get(constant('AppBundle\\Common\\Constants::TWIG_NOTICE')) %}
        {% for flash_message in notices %}
            <script>alert("{{ flash_message }}");</script>
        {% endfor %}
        <nav class="navbar navbar-default">
            <div class="container-fluid">
                <div class="navbar-header">
                    <a class="navbar-brand" href="/"><span class="glyphicon glyphicon-calendar"></span>Holiday Manager</a>
                </div>
                <ul class="nav navbar-nav">
                    {% if user %}
                        <li><a href="{{ path("selectAvailableHoliday") }}">Available Holidays</a></li>
                    {% endif %}
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    {% if user %}
                        <li><a href="{{ path("logout") }}"><span class="glyphicon glyphicon-log-out"></span> LogOut</a></li>
                    {% else %}
                        <li><a href="{{ path("login") }}"><span class="glyphicon glyphicon-log-in"></span> Login</a></li>
                        <li><a href="{{ path("register") }}"><span class="glyphicon glyphicon-user"></span> Register</a></li>
                    {% endif %}
                </ul>
            </div>
        </nav>
        {% block body %}{% endblock %}
        {% block javascripts %}
            <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
        {% endblock %}
    </body>
</html>
