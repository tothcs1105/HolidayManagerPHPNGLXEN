{% extends 'base.html.twig' %}

{% block title %}
    Holiday Manager | Taken Holidays
{% endblock %}

{% block body %}
    <div class="container">
        <div class="panel panel-primary">
            <div class="panel-heading clearfix">
                <h2 class="panel-title pull-left hm-panel-title">Taken Holidays</h2>
                <a href="{{ path("selectAvailableHoliday") }}" class="btn btn-primary pull-right"><i class="glyphicon glyphicon-plus"></i></a>
            </div>
            <div class="panel-body">
                {% if takenHolidays %}
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>Holiday Type</th>
                                <th>From</th>
                                <th>To</th>
                                <th>Days</th>
                                <th class="text-center">Delete</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for takenHoliday in takenHolidays %}
                                <tr>
                                    <td>{{ takenHoliday.getHolidayName() }}</td>
                                    <td>{{ takenHoliday.getFrom() }}</td>
                                    <td>{{ takenHoliday.getTo() }}</td>
                                    <td>{{ takenHoliday.getDays() }}</td>
                                    <td align="center"><a href="{{ path("deleteTakenHoliday", {'id' : takenHoliday.getHolidayId() }) }}"><span class="glyphicon glyphicon-remove"></span></a></td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                {% else %}
                    <strong>Currently there is no taken holiday!</strong>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}