{% extends 'base.html.twig' %}

{% block title %}
    Holiday Manager | {{ holidayUser }}'s Holidays
{% endblock %}

{% block body %}
    <div class="container">
        <div class="panel panel-primary">
            <div class="panel-heading clearfix">
                <a href="{{ path("listUsers") }}" class="btn btn-primary pull-left back-button"><i class="glyphicon glyphicon-arrow-left"></i></a>
                <h2 class="panel-title pull-left hm-panel-title">{{ holidayUser }}'s Holidays</h2>
                <a href="{{ path("selectHolidayForUser", {'username' : holidayUser }) }}" class="btn btn-primary pull-right"><i class="glyphicon glyphicon-plus"></i></a>
            </div>
            <div class="panel-body">
                {% if userHolidays %}
                    <table class="table table-striped table-hover">
                        <thead>
                        <tr>
                            <th>Holiday Type</th>
                            <th>Year</th>
                            <th>Total Days</th>
                            <th>Days Left</th>
                            <th class="text-center">Modify</th>
                            <th class="text-center">Delete</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for userHoliday in userHolidays %}
                            <tr {% if userHoliday.getDaysLeft() == 0 %}class="danger"{% endif %}>
                                <td>{{ userHoliday.getHolidayName() }}</td>
                                <td>{{ userHoliday.getYear() }}</td>
                                <td>{{ userHoliday.getDays() }}</td>
                                <td>{{ userHoliday.getDaysLeft() }}</td>
                                <td align="center"><a href="{{ path("updateUserHoliday", {'holidayId' : userHoliday.getHolidayId(), 'year' : userHoliday.getYear(), 'username' : holidayUser }) }}"><span class="glyphicon glyphicon-pencil"></span></a></td>
                                <td align="center"><a href="{{ path("deleteUserHoliday", {'holidayId' : userHoliday.getHolidayId(), 'year' : userHoliday.getYear(), 'username' : holidayUser }) }}"><span class="glyphicon glyphicon-remove"></span></a></td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                {% else %}
                    <strong>Currently {{ holidayUser }} does not have any holiday option!</strong>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}